<%- include("partials/header.ejs") %>
<body>
    <a href="/" class="home-text">Home</a>
    <h1 class="createHeader">Create your blog</h1>
    <div class="createContainer">
        <form action="/create" method="POST">
            <div>
                <input type="text" class="title" name="title" placeholder="Title" maxlength="10" required>
            </div>
            <div>
                <textarea class="body" name="body" placeholder="Body" required></textarea>
            </div>
            <div class="createSubmit">
                <button type="submit" name="submit" class="createSubmit">Submit</button>
            </div>
        </form>
    </div>
</body>
