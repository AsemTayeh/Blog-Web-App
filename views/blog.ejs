<%- include("partials/header.ejs") %>
<body>
    <a href="/" class="home-text">Home</a>
    <h1 class="viewHeader">Edit your blog</h1>

    <% if (locals.blog) { %>
        <div class="createContainer">
            <form action="/update/<%=blog.id%>" method="POST">
                <div>
                    <input type="text" class="title" name="title" value="<%=blog.title%>" required>
                </div>
                <div>
                    <textarea class="body" name="body" required><%=blog.body%></textarea>
                </div>
                <div class="update-delete">
                    <button type="submit" name="update" formaction="/delete/<%=blog.id%>" formmethod="POST" onclick="return confirmDelete()"class="delete">Delete</button>
                    <button type="submit" name="update" class="updateSubmit">Update</button>
                </div>
            </form>
        </div>
    <% } %>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this blog?");
        }
    </script>
</body>
<%- include("partials/footer.ejs") %>